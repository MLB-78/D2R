{% extends 'base.html.twig' %}

{% block title %}Listes des albums{% endblock %}

{% block body %}
<div class="container">
    <h1 class="pt-2 text-center" style="color:white">Listes des albums</h1>
    <hr>
    <div class="row pt-2">
    {% for leAlbum in lesAlbums %}
        
            <div class="col-sm-12 col-md-12 col-lg-4 col-xl">
                <div class="card mb-3">
                <h3 class="card-header" style="color:red"> <a href="{{ path('ficheAlbum', {'id': leAlbum.id })}}">{{ leAlbum.nom }}</a> </h3>

            <div class="card-body">

                <h5 class="card-title"> 
                <a href=" {{path('ficheArtiste',{'id': leAlbum.artiste.id})}} " style='color:red;font-weight: bold;'class="badge badge-success">
                 {{leAlbum.artiste.nom}} 
                </a>
                </h5>
            </div>
            <img class"mx-auto d-block" style="border-radius: 60%;height:auto; width:200px; margin:auto; display:block;" src="{{leAlbum.image}}" alt="Card image">
            <div class="card-body">
                <p class="card-text">{{leAlbum.date}}</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    {% for leStyle in leAlbum.styles %}
                        <span class="badge" style="background-color:{{leStyle.couleur}};"> {{leStyle.nom}} </span>
                    {% endfor %}
                </li>
                {% set nb = leAlbum.morceaux|length %}
                <li class="list-group-item">
                {{nb}} {% if nb>1 %} morceaux {% else %} morceau {% endif %}
                
                </li>
                
            </ul>
            </div>
        </div>
    {% endfor %}
    </div>  
</div>
{% endblock %}
