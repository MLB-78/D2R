{% extends 'base.html.twig' %}

{% block title %}Fiche label{% endblock %}

{% block body %}

<div class="container">

    <h1 class="pt-2 text-center" style="color:white">Fiche de label</h1>
    <hr>
    <a href="{{ path('labels') }}">Revenir à la liste</a>
    
    <div class="row pt-2">
    <pre>
      {# {{ dump(leLabel) }} #}
    </pre>
        {% set nbAlbums = leLabel.albums|length %}
        {% set nbAlbums = 1 %}
        
            <div class="col-sm-12 col-md-12 col-lg-4 col-xl">
                <div class="card mb-3">
            <h3 class="card-header" style="color:blue"> {{leLabel.nom}} </h3>
            <div class="row">
                <div class="col-3 d-flex align-items-center mx-auto">
                    <img class="mx-auto d-block" style="height:120px; width:150px; margin:auto; display:block;" src="{{leLabel.logo}}" alt="Card image">
                </div>
                <div class="col">
                
            <div class="card-body">

                <h5 class="card-title"> 
                <a href="" style='color:blue;font-weight: bold;'class="badge badge-success">{{nbAlbums}} {% if nbAlbums>1 %} albums {% else %} album {% endif %} </a>
                </h5>
            </div>
            <div class="card-body">
                <p class="card-text">{{leLabel.description|slice(0,200)|raw}}...</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                {% if leLabel.type == 0 %} Label solo {% else %} Groupe {% endif %}
                </li>
            </ul>
            </div>
            </div>
            </div>
        </div>
    </div>  


<table class="table table-hover mx-auto">
  <thead>
    <tr>
      <th scope="col-4">Nom de l'album</th>
    <th scope="col-1">Artiste</th>
      <th scope="col-3">Annee</th>
      <th scope="col-1">Styles</th>
    </tr>
  </thead>
  <tbody>
  {% for leAlbum in leLabel.albums %}

  
    <tr class="table-active">

      <td scope="row"><a href="{{ path('ficheAlbum', {'id': leAlbum.id }) }}"> {{leAlbum.nom}} </a> </td>
      <td><a href="{{ path('ficheArtiste', {'id': leArtiste.id }) }}"> {{leArtiste.nom}} </a> </td>
      <td>{{leLabel.annee}}</td>
      <td>{% if leLabel.type == "Indépendant" %}
              <span class="badge" style="background-color:{{ leStyle.couleur | default('#0eedd4') }};">{{ leLabel.type }}</span>
            {% else %}
              <span class="badge" style="background-color:{{ leStyle.couleur | default('#0eedd4') }};">{{ leLabel.type }}</span>
            {% endif %}
      </td>

    </tr>
  {% endfor %}
  </tbody>
</table>

  </div>
    

</div>
 
{% endblock %}
