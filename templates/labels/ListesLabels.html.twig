{% extends 'base.html.twig' %}

{% block title %}Listes des labels{% endblock %}

{% block body %}
<div class="container">
    <h1 class="pt-2 text-center" style="color:white">Listes des labels</h1>
    <hr>
    <div class="row pt-2">
    {% for leLabel in lesLabels %}
        {% set nbAlbums = leLabel.albums|length %}
        
            <div class="col-sm-12 col-md-12 col-lg-4 col-xl">
                <div class="card mb-3">
                <h3 class="card-header" style="color:red"> <a href="{{ path('ficheLabel', {'id': leLabel.id })}}">{{ leLabel.nom }}</a> </h3>

            <div class="card-body">
            <pre>
                {{ dump(nbAlbums,leLabel.id) }}
            </pre>
                <h5 class="card-title"> 
                <a href="" style='color:blue;font-weight: bold;'class="badge badge-success">{{nbAlbums}} {% if nbAlbums>1 %} albums {% else %} album {% endif %} </a>
                </h5>
            </div>
            <img class"mx-auto d-block" style="border-radius: 30%;height:auto; width:150px; margin:auto; display:block;" src="{{leLabel.logo}}" alt="Card image">
            <div class="card-body">
                <p class="card-text">{{leLabel.description|slice(0,170)|raw}}...</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    {% if leLabel.type == "Ind√©pendant" %}
                        <a href="" class="badge badge-success">{{ leLabel.type }}</a>
                    {% else %}
                        <a href="" class="badge badge-success">{{ leLabel.type }}</a>
                    {% endif %}
                </li>

            </ul>
            </div>
        </div>
    {% endfor %}
    </div>  
</div>
{% endblock %}
