<div id="modalSimple" class="modal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true"></span>
        </button>
      </div>
      <div class="modal-body">
      </div>
      <div class="modal-footer">
        <a id="btn-action" type="button" class="btn btn-primary">Supprimer</a>
        <button type="button" class="btn btn-info" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script>
  const elements = document.querySelectorAll('a[data-lien]');

  elements.forEach(element => {
    element.addEventListener('click', function() {

      const lien = this.getAttribute('data-lien');
      const titre = this.getAttribute('data-titre');
      const message = this.getAttribute('data-message');
      const libelleBouton = this.getAttribute('data-libelle-bouton');

      document.getElementById('btn-action').setAttribute('href', lien); // Changed to 'href'
      document.querySelector('.modal-title').textContent = titre;
      document.querySelector('.modal-body').textContent = message;
      document.getElementById('btn-action').textContent = libelleBouton;
    });
  });
</script>
